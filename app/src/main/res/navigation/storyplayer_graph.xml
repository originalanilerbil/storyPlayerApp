<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storyplayer_graph"
    app:startDestination="@id/mainPage">

    <fragment
        android:id="@+id/story_detail_page"
        android:name="com.anilerbil.storyplayerapp.ui.StoryDetailPage"
        android:label="story_detail_page">
        <action
            android:id="@+id/action_story_detail_page_to_mainpage"
            app:destination="@id/mainPage" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="userpp"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mainPage"
        android:name="com.anilerbil.storyplayerapp.ui.MainPage"
        android:label="main_page">
        <action
            android:id="@+id/action_mainpage_to_storyy_detail_page"
            app:destination="@id/story_detail_page" />
    </fragment>
</navigation>